{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "ESNext"
    ],
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "skipLibCheck": true,
    "allowJs": true,
    "types": [
      "node"
    ]
  },
  "exclude": [
    "./node_modules",
    "./dist"
  ],
  "include": [
    "src/**/*"
  ]
}
